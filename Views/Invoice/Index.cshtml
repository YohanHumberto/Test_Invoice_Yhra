@model List<Test_Invoice_Yhra.Models.DB.Invoice>

<main class="border p-3">
    <div class="d-flex justify-content-between mb-3">
        <h3>Lista de facturas</h3>
        <a class="btn btn-primary" asp-controller="Invoice" asp-action="Create">Agregar</a>
    </div>
    <table id="myTable" class="table table-bordered table-hover table-responsive table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Customer</th>
                <th>Total Itbis</th>
                <th>Sub Total</th>
                <th>Total</th>
                <th>Editar</th>
                <th>Eliminar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Customer.CustName</td>
                    <td>@item.TotalItbis</td>
                    <td>@item.SubTotal</td>
                    <td>@item.Total</td>
                    <td>
                        @Html.ActionLink("Detalle", "Index", "InvoiceDetails", new {id = item.Id}, new { @class = "btn btn-warning"})
                    </td> 
                    <td>
                        @Html.ActionLink("Editar", "Edit", null, new {id = item.Id}, new { @class = "btn btn-warning"})
                    </td>
                    <td>
                        @Html.ActionLink("Eliminar", "Delete",null, null, null,null,  new { id = item.Id } , new{ @class = "btn btn-danger",})
                    </td>
                </tr>
            }
        </tbody>
    </table>
</main>
