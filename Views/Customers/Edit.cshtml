@model Test_Invoice_Yhra.Models.DB.Customer

<main>
    <div class="w-50 m-auto p-3 border">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="mt-2 mb-4">
                <h4>Editar cliente</h4>
            </div>
            <div class="mb-2">
                <label>Nombre: </label>
                @Html.EditorFor(model=> model.CustName,new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="mb-2">
                <label>Direccion: </label>
                @Html.EditorFor(model=> model.Adress,new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="mb-2">
                <label>Estado: </label>
                @Html.DropDownListFor(model=> model.Status,ViewBag.ListStatus as SelectList,  new { @class = "form-control"})
            </div>
            <div class="mb-4">
                <label>Tipo de cliente: </label>
                @Html.DropDownListFor(model=> model.CustomerTypeId,ViewBag.ListCustomerType as SelectList,  new { @class = "form-control"})
            </div>
            <div class="mb-2">
                <button class="btn btn-primary" type="submit">Guardar</button>
                <button class="btn btn-warning" type="reset">Limpiar</button>
                <a class="btn btn-danger" asp-controller="Customers" asp-action="Index">Cancelar</a>
            </div>
        }
    </div>
</main>
