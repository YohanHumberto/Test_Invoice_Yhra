@model Test_Invoice_Yhra.Models.DB.InvoiceDetail

<main>
    <div class="w-50 m-auto p-3 border">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="mt-2 mb-4">
                <h4>Agregar detalle factura</h4>
            </div>
            <div class="mb-2">
                <label>Factura: </label>
                @Html.DropDownListFor(model=> model.InvoiceId, ViewBag.ListInvoice as SelectList,  new { @class = "form-control"})
            </div> 
            <div class="mb-2">
                <label>Cantidad: </label>
                @Html.EditorFor(model=> model.Qty,new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="mb-2">
                <label>Price: </label>
                @Html.EditorFor(model=> model.Price,new { htmlAttributes = new { @class = "form-control" } })
            </div>
             <div class="mb-2">
                <label>Total itbis: </label>
                @Html.EditorFor(model=> model.TotalItbis,new { htmlAttributes = new { @class = "form-control", @readonly = true } })
            </div>
            <div class="mb-2">
                <label>Subtotal: </label>
                @Html.EditorFor(model=> model.SubTotal,new { htmlAttributes = new { @class = "form-control disabled", @readonly = true } })
            </div>
            <div class="mb-2">
                <label>Total: </label>
                @Html.EditorFor(model=> model.Total,new { htmlAttributes = new { @class = "form-control disabled", @readonly = true } })
            </div>
            <div class="mb-2">
                <button class="btn btn-primary" type="submit">Guardar</button>
                @Html.ActionLink("Cancelar", "Index", null, new { invoiceId = ViewBag.InvoiceId }, new { @class = "btn btn-danger"})
            </div>
        }
    </div>
</main>
