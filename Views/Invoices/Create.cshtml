@model Test_Invoice_Yhra.Models.DB.CustomerType

<main>
    <div class="w-50 m-auto p-3 border">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="mt-2 mb-4">
                <h4>Agregar tipo de cliente</h4>
            </div>
            <div class="mb-2">
                <label>Descriccion: </label>
                @Html.EditorFor(model=> model.Description,new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="mb-2">
                <button class="btn btn-primary" type="submit">Guardar</button>
                <a class="btn btn-danger" asp-controller="CustomersTypes" asp-action="Index">Cancelar</a>
            </div>
        }
    </div>
</main>
